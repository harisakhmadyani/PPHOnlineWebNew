<div class="modal fade" id="modal-lg3">
    <div class="modal-dialog modal-lg">
        <form id="my_form">
            <div class="modal-content">
                <div class="modal-header bg-gradient-primary">
                    <h5 class="modal-title brand-text font-weight-light"><i class="fas fa-pencil-square-o mr-1"></i><b>Input</b> Item Price</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label"><h3 class="card-title brand-text font-weight-light"><b>Item</b></h3></label>
                            <div class="col-md-9">
                                <span id="inform"></span><br>
                                <span id="idesc"></span>
                                <input type="hidden" class="form-control" name="itemid" id="itemid" value="">
                                <input type="hidden" class="form-control" name="newitemid" id="newitemid" value="">
                                <input type="hidden" class="form-control" name="factory" id="factory" value="">
                                @* <input type="hidden" class="form-control" name="id" id="id" value=""> *@
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 col-form-label"><h3 class="card-title brand-text font-weight-light"><b>Quantity (<span id="iuom"></span>)</b></h3></label>
                            <div class="col-md-9">
                                <input type="text" class="form-control text-right autonum_price2" id="iqnty" name="iqnty" readonly value="">
                                <input type="hidden" class="form-control autonum_price2" id="iqtyrt" name="iqtyrt" readonly value="">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 col-form-label"><h3 class="card-title brand-text font-weight-light"><b>Currency</b></h3></label>
                            <div class="col-md-9">
                                <select name="currency" id="currency" class="form-control">
                                    @if(ViewBag.Curr.data != null){
                                        @foreach (var item in ViewBag.Curr.data)
                                        {
                                            <option value="@item.CurrencyID">@item.CurrencyID</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 col-form-label"><h3 class="card-title brand-text font-weight-light"><b>Price / <span id="uom"></span></b></span></h3></label>
                            <div class="col-md-9">
                                <input type="text" class="form-control text-right autonum_price2" id="price" name="price">
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label"><h3 class="card-title brand-text font-weight-light"><b>Valid Until</b></h3></label>
                            <div class="col-md-9">
                                <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                    <div class="input-group-prepend" data-target="#reservationdate" data-toggle="datetimepicker">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                    </div>
                                    <input type="text" class="form-control datetimepicker-input" name="valid" id="valid" data-target="#reservationdate" placeholder="dd/mm/yyyy" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 col-form-label"><h3 class="card-title brand-text font-weight-light"><b>Delivery Date</b></h3></label>
                            <div class="col-md-9">
                                <div class="input-group date" id="reservationdate2" data-target-input="nearest">
                                    <div class="input-group-prepend" data-target="#reservationdate2" data-toggle="datetimepicker">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                    </div>
                                    <input type="text" class="form-control datetimepicker-input" name="delivery" id="delivery" data-target="#reservationdate2" placeholder="dd/mm/yyyy" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 col-form-label"><h3 class="card-title brand-text font-weight-light"><b>Remark</b></h3></label>
                            <div class="col-md-9">
                                <textarea name="remark" id="remark"  rows="5" class="form-control"></textarea>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="modal-footer justify-content-between mr-1 ml-1">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fas fa-times mr-1"></i>Close</button>
                    <button type="button" id="save" class="btn bg-gradient-primary" onclick="updatedata()"><i class="fas fa-save mr-1"></i>Save</button>
                </div>
            </div>
        </form>
    </div> 
</div>

<!-- ================================================ modul supplier ================================================== -->

<script type="text/javascript">
    $(function () {
        $('.autonum_price2').autoNumeric('init', {
            mDec: 2,
            aDec: '.',
            aSep: ','
        });

        $('#reservationdate').datetimepicker({
            format: 'DD/MM/YYYY'
            // format: 'DD/MM/YYYY hh:mm A'
        });

        $('#reservationdate2').datetimepicker({
            format: 'DD/MM/YYYY'
            // format: 'DD/MM/YYYY hh:mm A'
        });
    })
</script>
